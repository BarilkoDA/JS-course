/* Условия
Есть условие = Есть результат
Условие всегда преобразуется к булиновому типу значения
1 в логическом аспекте - всегда правда
Если содержимое будет присутствовать - true
Если нет - false
 */
"use strict";

if (4 == 9) {
    console.log('Ok!');
} else {
    console.log('Error');
}

